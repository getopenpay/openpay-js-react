{
  "name": "@getopenpay/core",
  "description": "Accept payments through OpenPay, right on your site",
  "author": "OpenPay <info@getopenpay.com> (https://getopenpay.com)",
  "license": "ISC",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build-packages": "turbo build --filter=@getopenpay/*",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "preview": "turbo run preview --filter=react-example --filter=vanilla-example",
    "dev-packages": "turbo run dev --filter=@getopenpay/*"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5",
    "vite-plugin-singlefile": "^2.0.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "ts-custom-error": "^3.3.1"
  }
}
