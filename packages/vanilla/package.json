{
  "name": "@getopenpay/js",
  "version": "0.0.13",
  "description": "Accept payments through OpenPay, right on your site",
  "author": "OpenPay <info@getopenpay.com> (https://getopenpay.com)",
  "license": "ISC",
  "type": "module",
  "main": "dist/index.cjs.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "getopenpay",
    "openpay",
    "payments"
  ],
  "scripts": {
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix --report-unused-disable-directives --max-warnings 0",
    "prepare": "husky",
    "build": "rm -rf dist && npm run build:dts && npm run build:esm && npm run build:cjs",
    "build:dts": "tsc -p tsconfig.build.json --outDir ./dist",
    "build:esm": "esbuild --bundle index.ts --format=esm --outfile=./dist/index.esm.js --packages=external",
    "build:cjs": "esbuild --bundle index.ts --format=cjs --outfile=./dist/index.cjs.js --packages=external",
    "dev": "tsc -p tsconfig.build.json --watch && esbuild --bundle index.ts --format=esm --outfile=./dist/index.esm.js --watch --packages=external"
  },
  "dependencies": {
    "@getopenpay/utils": "*"
  },
  "devDependencies": {
    "@getopenpay/eslint-config": "*",
    "@getopenpay/typescript-config": "*",
    "@stripe/stripe-js": "^4.3.0",
    "@types/node": "^22.0.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "esbuild": "^0.23.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "typescript": "^5.2.2"
  }
}
