{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "index.ts",
        "src/**/*.{ts,tsx,js,jsx}",
        "tsconfig.json",
        "tsconfig.*.json",
        "vite.config.ts"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".vite/**", "*.tsbuildinfo"]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "cache": false,
      "persistent": true
    }
  }
}
